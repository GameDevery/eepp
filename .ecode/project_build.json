{
  "ecode": {
    "build": [
      {
        "args": "--with-mojoal --with-debug-symbols gmake",
        "command": "premake4",
        "working_dir": "${project_root}"
      },
      {
        "args": "-j${nproc} config=${build_type} ecode",
        "command": "make",
        "working_dir": "${build_dir}"
      }
    ],
    "build_types": [
      "debug",
      "release"
    ],
    "clean": [
      {
        "args": "config=${build_type} clean",
        "command": "make",
        "working_dir": "${build_dir}"
      }
    ],
    "config": {
      "clear_sys_env": false,
      "enabled": true
    },
    "os": [
      "linux"
    ],
    "output_parser": {
      "config": {
        "relative_file_paths": true
      },
      "error": [
        {
          "pattern": "([^:]+):(%d+):(%d+):%s?[%w%s]*error:%s?(.*)",
          "pattern_order": {
            "col": 3,
            "file": 1,
            "line": 2,
            "message": 4
          }
        }
      ],
      "notice": [
        {
          "pattern": "([^:]+):(%d+):(%d+):%s?[%w%s]*notice:%s?(.*)",
          "pattern_order": {
            "col": 3,
            "file": 1,
            "line": 2,
            "message": 4
          }
        }
      ],
      "warning": [
        {
          "pattern": "([^:]+):(%d+):(%d+):%s?[%w%s]*warning:%s?(.*)",
          "pattern_order": {
            "col": 3,
            "file": 1,
            "line": 2,
            "message": 4
          }
        }
      ]
    },
    "var": {
      "build_dir": "${project_root}/make/${os}"
    }
  }
}
